@{
    ViewData["Title"] = "AdminPanel";
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js">
    <link rel="stylesheet" href="~/global.css" />
    <link rel="stylesheet" href="~/css/site.css">
    <link rel="stylesheet" href="~/css/ProductAdminPanel.css" asp-append-version="true" />
}
<div>
    <!-- <section class="d-flex" style="background-color: #eee;" id="show"> -->
    <div class="container py-5 ">
        <div class="row d-flex " id="show">
            <div class="col-12 mt-3">
            </div>
        </div>
    </div>
    <!-- </section> -->

</div>
<div class="login pb-5">
    <div class="login-triangle"></div>

    <h2 class="login-header">اضافه کردن محصول</h2>

    <form class="login-container">
       <div class="d-flex">
            <p><input id="NameProduct" type="text" placeholder="نام محصول"></p>
            <p><input id="ProductDes" type="text" placeholder="توضیحات محصول"></p>
       </div>
        <div class="d-flex">
            <p><input id="orginalPrice" type="text" placeholder="قیمت محصول"></p>
            <p><input id="DiscountPrice" type="text" placeholder="قیمت تخفیف"></p>
       </div>
       <div>
            <div class="d-flex text-center">
                <p>
                    <select name="Brands" id="Brands" style="width:160%" class="me-3">
                     

                    </select>
                </p>
                <p>
                    <select name="Country" id="Country" style="width:110%" class="me-5 ms-5">
                       

                    </select>
                </p>
                <p>
                    <select name="categoryes" id="categoryes" style="width:120%;" class="me-5">
                    </select>
                </p>
            </div>
       </div>
        <div class="d-flex">
         
           @* <p><input type="number" id="Count" placeholder="تعداد"></p>*@
            <p class="pe-4">
                <select name="cars" id="IsActive" class="" style="width:300%;">
                    <option value="1">فعال</option>
                    <option value="0">غیرفعال</option>
                </select>
            </p>
            <div style="margin-right:20%;width:50%;"><p class="pe-5 me-5"><input type="number" id="Count" name="quantity" min="1" max="20"></p></div>
       </div>
        <div class="d-flex mb-4">
            <input id="ImageURL" type="file"  name="myfile" multiple>
       </div>
        <a onclick="AddProduct()" class="text-center" style="background-color:#00977d;color:white;display:block;
        padding:10px 20px;width:30%;margin-right:auto;margin-left:auto">اضافه کردن محصول</a>
    </form>
</div>
<script src="https://cdn.jsdelivr.net/npm/swiper@11/swiper-bundle.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.7.1/jquery.min.js" integrity="sha512-v2CJ7UaYy4JwqLDIrZUI/4hqeoQieOmAZNXBeQyjo21dadnwR+8ZaIJVT8EE2iyI61OV8e6M8PP2/4hpQINQ/g==" crossorigin="anonymous" referrerpolicy="no-referrer">

